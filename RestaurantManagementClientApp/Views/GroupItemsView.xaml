             d:DesignHeight="448" d:DesignWidth="350">
    <Grid>
        <Button x:Name="button_Copy" Style="{StaticResource toolBarButton}"  HorizontalAlignment="Left" Margin="130,24,0,0" VerticalAlignment="Top" Width="96" Height="96">
            <Grid>
                <Image x:Name="ExitIcon" HorizontalAlignment="Left" Source="/RestaurantManagementClientApp;component/Resources/salad.png" Margin="0,-14,0,24" Width="64"/>
                <Label x:Name="lblSalad" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Content="Salad" HorizontalAlignment="Right" Height="37" Margin="0,43,-6,-4" VerticalAlignment="Top" Width="70" FontSize="18" FontWeight="Bold" FontFamily="Monotype Corsiva"/>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDown">
                        <i:InvokeCommandAction Command="{Binding MenuGroupClick}" CommandParameter="{Binding ElementName=lblSalad}" ></i:InvokeCommandAction>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Grid>
            

        </Button>
